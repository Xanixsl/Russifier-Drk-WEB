    "CONFIG": {
        "ENABLED_KEY": "drk_enabled_v2",
        "DEBUG_KEY": "drk_debug_mode",
        "LANG_CACHE_KEY": "drk_lang_cache",
        "CONST_CACHE_KEY": "drk_const_cache",
        "META_CACHE_KEY": "drk_meta_cache",
        "USER_CONFIG_KEY": "drk_user_config",
        "LAST_CHECK_KEY": "drk_last_update_check",
        "CACHE_TTL": 604800000,
        "AUTO_CHECK_UPDATES": true,
        "SHOW_UNTANSLATED": true,
        "ENABLE_OBSERVER": true,
        "ENABLE_FIXES": true,
        "ENABLE_DEV_TOOLS": false,
        "ENABLE_LANGUAGE_DETECTOR": true,
        "MIN_TEXT_LENGTH": 2,
        "TRANSLATION_TIMEOUT": 10000,
        "RESOURCE_TIMEOUT": 10000
    },
    
    "SPECIAL_CASES": {
        "TEXT_CLEANUP": {
            "removeExtraSpaces": true,
            "normalizeQuotes": false,        // ВЫКЛЮЧЕНО - может добавлять пробелы
            "trimWhitespace": true,
            "preserveTechnicalPatterns": true,
            "cleanPunctuation": false,       // ВАЖНО: ВЫКЛЮЧЕНО! Это добавляло пробелы после точек
            "preserveNumbersWithDots": true   // НОВОЕ: сохранять числа с точками
        },
        
        "PROBLEMATIC_PATTERNS": [
            "2.4GhzLink",
            "USBLink",
            "ScrollRight",
            "ScrollLeft",
            "Key1",
            "Key2",
            "Key3",
            "Key4",
            "Key5",
            "125HZ",
            "500HZ",
            "1000HZ",
            "2000HZ",
            "4000HZ",
            "8000HZ",
            "1Minute",
            "5Minute",
            "10Minute",
            "15Minute",
            "20Minute",
            "25Minute",
            "30Minute",
            "35Minute",
            "40Minute",
            "DPI+",
            "DPI-",
            "Volume+",
            "Volume-",
            "Brightness+",
            "Brightness-"
        ],
        
        "TECHNICAL_PATTERNS": [
            "^\d+\.\d+GhzLink$",     // ТОЛЬКО точное совпадение с GhzLink
            "^\d+\.\d+GHz$",         // Частоты в GHz
            "^\d+Hz$",              // Частоты в Hz
            "^\d+HZ$",              // Частоты в HZ
            "^[A-Z]+\\d+$",         // Технические обозначения типа USB2
            "^Key\\d+$"             // Кнопки Key1, Key2 и т.д.
        ],
        
        "PRESERVE_PATTERNS": [      // НОВЫЙ РАЗДЕЛ: паттерны которые НЕЛЬЗЯ изменять
            "\d+\.\d+[A-Za-z]",     // Сохранять числа с точками и буквами
            "[A-Za-z]+\\d+\\.\\d+", // Буквы-числа-точка-числа
            "\\.(?=\\S)"            // Точка перед не-пробелом (не добавлять пробел)
        ],
        
        "SKIP_TAGS": ["SCRIPT", "STYLE", "NOSCRIPT", "TEXTAREA", "INPUT", "CODE", "PRE"],
        
        "TRANSLATE_ATTRIBUTES": ["title", "placeholder", "aria-label", "alt", "value"]
    },
    
    "DICTIONARY_META": {
        "DEFAULT_VERSION": "2.0.0",
        "MIN_ENTRIES": 50,
        "UPDATE_CHECK_INTERVAL": 300000,
        "VALIDATION_RULES": {
