{
    "_meta": {
        "version": "2.1.5",
        "description": "Константы для Russifier Drk WEB 5",
        "author": "Xanix",
        "created": "2026-01-06",
        "updated": "2026-01-07",
        "website": "https://github.com/Xanixsl/Russifier-Drk-WEB"
    },
    
    "VERSION": "2.1.5",
    "AUTHOR": "Xanix",
    "LANG_FILE": "ru.json",
    "DEBUG_HASH": "#drk_debug_eHJhbml4XzIwMjY=",
    
    "URLS": {
        "GITHUB_REPO": "https://github.com/Xanixsl/Russifier-Drk-WEB",
        "LANG_BASE": "https://raw.githubusercontent.com/Xanixsl/Russifier-Drk-WEB/refs/heads/main/lang/",
        "STYLES": "https://raw.githubusercontent.com/Xanixsl/Russifier-Drk-WEB/refs/heads/main/src/style.css",
        "CONSTANTS": "https://raw.githubusercontent.com/Xanixsl/Russifier-Drk-WEB/refs/heads/main/src/const.json"
    },
    
    "CONFIG": {
        "CACHE_TTL": 604800000,
        "AUTO_CHECK_UPDATES": true,
        "SHOW_UNTANSLATED": true,
        "ENABLE_OBSERVER": true,
        "ENABLE_FIXES": true,
        "ENABLE_DEV_TOOLS": true,
        "ENABLE_LANGUAGE_DETECTOR": true,
        "MIN_TEXT_LENGTH": 2,
        "TRANSLATION_TIMEOUT": 10000,
        "RESOURCE_TIMEOUT": 10000
    },
    
    "SPECIAL_CASES": {
        "TEXT_CLEANUP": {
            "removeExtraSpaces": true,
            "normalizeQuotes": false,
            "trimWhitespace": true,
            "preserveTechnicalPatterns": true,
            "cleanPunctuation": false,
            "preserveNumbersWithDots": true
        },
        
        "PROBLEMATIC_PATTERNS": [
            "2.4GhzLink",
            "USBLink",
            "ScrollRight",
            "ScrollLeft",
            "Key1",
            "Key2",
            "Key3",
            "Key4",
            "Key5",
            "125HZ",
            "500HZ",
            "1000HZ",
            "2000HZ",
            "4000HZ",
            "8000HZ",
            "1Minute",
            "5Minute",
            "10Minute",
            "15Minute",
            "20Minute",
            "25Minute",
            "30Minute",
            "35Minute",
            "40Minute",
            "DPI+",
            "DPI-",
            "Volume+",
            "Volume-",
            "Brightness+",
            "Brightness-"
        ],
        
        "TECHNICAL_PATTERNS": [
            "^\\d+\\.\\d+GhzLink$",
            "^\\d+\\.\\d+GHz$",
            "^\\d+Hz$",
            "^\\d+HZ$",
            "^[A-Z]+\\d+$",
            "^Key\\d+$"
        ],
        
        "SKIP_TAGS": ["SCRIPT", "STYLE", "NOSCRIPT", "TEXTAREA", "INPUT", "CODE", "PRE"],
        
        "TRANSLATE_ATTRIBUTES": ["title", "placeholder", "aria-label", "alt", "value"]
    },
    
    "COMMANDS": {
        "HELP_TEXT": "Используйте drk.help() для списка команд"
    }
}
